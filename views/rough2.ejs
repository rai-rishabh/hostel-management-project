<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>HMS</title>

    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/cards.css" />
    <link rel="stylesheet" href="/css/welcome-text.css" />
    <link rel="stylesheet" href="/css/cat-welcome.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/NoticeBoard.css" />

    <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link
       rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
    />
    
    
    <style>
        @import url('https://fonts.googleapis.com/css?family=Gochi+Hand');
    </style>
  </head>
  <body>
    <%- include('./header') %>

    <!-- ======================================== 
          Our Main Hero Section Start  
    ========================================  -->
    <main>
      <section class="mid">
            <!-- Slider main container -->
            <div class="swiper">
              <!-- Additional required wrapper -->
              <div class="swiper-wrapper">
                <!-- Slides -->
                
                <% notices.forEach(function(notice) { %>
                <div class="swiper-slide">
                  <div class="notice">
                    <div class="banner" style="word-wrap: break-word; overflow-wrap: break-word;">
                      <h2 class="heading" style="word-wrap: break-word; overflow-wrap: break-word;">
                        <%= notice.heading %>
                      </h2>
                    </div>
                    <div class="body" style="word-wrap: break-word; overflow-wrap: break-word;">
                      <%= notice.nbody %>
                    </div>
                    <div class="date"><%= notice.created_at %></div>
                  </div>
                </div>
                <% }); %>

                              
              </div>
              <!-- If we need pagination -->
              <div class="swiper-pagination"></div>
            
              <!-- If we need navigation buttons -->
              <div class="swiper-button-prev"></div>
              <div class="swiper-button-next"></div>
            
            </div>
      </section>     
    </main>

     <!-- ======================================== 
          Our Footer Section Start  
    ========================================  -->
    <%- include('./footer') %>

    <!-- ======================================== 
          Our JavaScript Section Start  
    ========================================  -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="/js/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script>
      const swiper = new Swiper('.swiper', {
        loop: true,
        navigation: {
                      nextEl: '.swiper-button-next',
                      prevEl: '.swiper-button-prev',
                    },
        slidesPerView: 4,
        paginationClickable: true,
        spaceBetween: 20,
        breakpoints: {
            1920: {
                slidesPerView: 4,
                spaceBetween: 20
            },
            1028: {
                slidesPerView: 3,
                spaceBetween: 20
            },
            480: {
                slidesPerView: 2,
                spaceBetween: 10
            }
        }

        // And if we need scrollbar
        // scrollbar: {
        //   el: '.swiper-scrollbar',
        // },
      });
    
    </script>
  </body>
</html>